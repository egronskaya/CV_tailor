# Copy this file to .env and fill in your values
# OpenAI Configuration
OPENAI_API_KEY=your_api_key_here
GPT_MODEL=gpt-4.1-mini

# Model Parameters
MAX_TOKENS=2000
TEMPERATURE=0.7
TOP_P=0.9

# Document Generation Settings
MAX_COVER_LETTERS=3
CV_FORMAT=latex  # Options: latex, docx
COVER_LETTER_TONE=professional  # Options: professional, enthusiastic, balanced

# File Paths
CV_TEMPLATE_PATH=templates/cv_template.tex
STYLE_GUIDE_PATH=templates/style_guide.yaml
CV_GUIDE_PATH=templates/cv_tailoring_guide.md
LETTER_EXAMPLES_PATH=examples/cover_letters/style_examples.md

# Output Settings
OUTPUT_DIR=output
SAVE_INTERMEDIATE=false
DEBUG_MODE=false

# PDF Generation
PDF_ENGINE=pdflatex  # Options: pdflatex, xelatex
LATEX_TIMEOUT=30  # seconds

# Application Settings
DEFAULT_PORT=8501
CACHE_TTL=3600  # seconds
MAX_FILE_SIZE=5  # MB